include_rules

# Install the cpp files locally, and put them in the <installed-headers> group
# since some .cpp files #include others directly.
: foreach ../*.cpp |> !ln |> %b | $(MOZ_ROOT)/dist/include/<installed-headers>

include $(MOZ_ROOT)/build/tup/compile.tup
