.gitignore

ifndef MOZ_OBJDIR
error "Please create a tup.config file with CONFIG_MOZ_OBJDIR=obj-your-objdir-here"
endif

MOZ_ROOT = $(TUP_CWD)
DIST = $(MOZ_ROOT)/@(MOZ_OBJDIR)/dist

PYTHON = python -B
PYTHON_PATH = $(PYTHON) $(MOZ_ROOT)/config/pythonpath.py
PLY_INCLUDE = -I$(MOZ_ROOT)/other-licenses/ply

!ln = |> ^ LN %o -> %f^ ln -s %f %o |> %b
!cp = |> ^ CP %f -> %o^ cp %f %o |> %b
