include_rules

export SHELL

# List of directories that contain EXPORTS
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/util
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/cryptohi
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/pk11wrap
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/certdb
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/pkcs7
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/ssl
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/smime
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/freebl
EXPORT_DIRS += $(MOZ_ROOT)/security/nss/lib/nss

# --allow-includes needed for mfbt, which defines exports in exported_headers.mk
run $(PYTHON) $(MOZ_ROOT)/build/pymake/tup_export.py --allow-includes -m Makefile EXPORTS $(MOZ_ROOT) @(MOZ_OBJDIR) $(EXPORT_DIRS)
