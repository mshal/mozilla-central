include_rules

# Process all of the idl files in dist/idl so we can generate headers.
: foreach ../idl/*.idl | ../idl/<installed-idls> |> ^ python header.py [%f -> %o]^ $(PYHEADER) -I../idl %f -o %o --cachedir=../idl |> %B.h

